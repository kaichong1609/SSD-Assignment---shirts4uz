@page
@model SSD_Assignment___shirts4uz.Pages.Deliveries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Deliveries[0].ShirtName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deliveries[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deliveries[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deliveries[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deliveries[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deliveries[0].Price)
            </th>
            @if (User.IsInRole("Product Manager"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Deliveries[0].UserEmail)
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Deliveries)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShirtName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @if (User.IsInRole("Product Manager"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
            }
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
