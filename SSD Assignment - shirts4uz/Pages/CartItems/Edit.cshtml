@page
@model SSD_Assignment___shirts4uz.Pages.CartItems.EditModel
@{
    ViewData["Title"] = "Edit";
}
@if (Model.Cart.UserEmail != User.Identity.Name.ToString())
{
    <h2>Item does not exist</h2>
}

@if (Model.Cart.UserEmail == User.Identity.Name.ToString())
{
    <h2>Update Quantity</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Cart.Quantity" class="control-label">Quantity</label>
                <input asp-for="Cart.Quantity" class="form-control">
                <span asp-validation-for="Cart.Quantity" class="text-danger"></span>
                <input type="hidden" asp-for="Cart.ID" />
                <input type="hidden" asp-for="Cart.ShirtID" />
                <input type="hidden" asp-for="Cart.ShirtName" />
                <input type="hidden" asp-for="Cart.TtlPrice" />
                <input type="hidden" asp-for="Cart.UserEmail" />


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="./ViewCart">Back to List</a>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
