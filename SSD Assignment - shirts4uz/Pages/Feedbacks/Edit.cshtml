@page
@model SSD_Assignment___shirts4uz.Pages.Feedbacks.EditModel
@{
    ViewData["Title"] = "Edit";
}
@if (Model.Feedback.FullName != User.Identity.Name.ToString() && !User.IsInRole("Product Manager"))
{
    <h1>Item does not exist</h1>
}
@if (Model.Feedback.FullName == User.Identity.Name.ToString() || User.IsInRole("Product Manager"))
{
    <h2>Edit Feedback</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Feedback.FullName" class="control-label"></label>
                    <input asp-for="Feedback.FullName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.Comment" class="control-label"></label>
                    <input asp-for="Feedback.Comment" class="form-control" />
                    <span asp-validation-for="Feedback.Comment" class="textdanger"></span>
                </div>
                <label asp-for="Feedback.Rating" class="control-label"></label>
                <select asp-for="Feedback.Rating" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
                <input type="hidden" asp-for="Feedback.ID" />
                <input type="hidden" asp-for="Feedback.ShirtID" />

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="../Shirts/Index">Back to List</a>
    </div>
}
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
