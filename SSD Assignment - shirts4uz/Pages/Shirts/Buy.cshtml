@page
@model SSD_Assignment___shirts4uz.Pages.Shirts.BuyModel
@{
    ViewData["Title"] = "Purchase";
    var photoPath = "~/img/" + (Model.Shirt.PhotoPath ?? "noimg.jpg");
}

<h1>Purchase</h1>

<h4>Shirt</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Shirt.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Shirt.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Shirt.Color)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Shirt.Color)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Shirt.Size)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Shirt.Size)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Shirt.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Shirt.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Shirt.Price)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Shirt.Price)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Shirt.ListDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Shirt.ListDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Shirt.Category)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Shirt.Category)
    </dd>
    <dd class="col-sm-10">
        <div class="form-group row col-sm-4 offset-4">
            <img class="imageThumbnail" src="@photoPath" asp-append-version="true" style="max-width:30rem;" />
        </div>
    </dd>

</dl>

<div class="row">
    <div class="col-75">
        <div class="container">
            <form>
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <h3>Billing Address</h3>
                        <label for="fname" class="fa fa-user control-label"> Full Name</label>
                        <input type="text" id="fname" name="firstname" placeholder="John M. Doe" class="form-control">
                        <br />
                        <label for="email" class="fa fa-envelope control-label">Email</label>
                        <input type="text" id="email" name="email" placeholder="john@example.com" class="form-control">
                        <br />
                        <label for="adr" class="fa fa-address-card-o control-label"> Address</label>
                        <input type="text" id="adr" name="address" placeholder="542 W. 15th Street" class="form-control">
                        <br />
                        <label for="city" class="fa fa-institution control-label"> City</label>
                        <input type="text" id="city" name="city" placeholder="New York" class="form-control">
                        <br />
                        <div class="row form-group">
                            <div class="col-sm-6">
                                <label for="state" class="control-label">State</label>
                                <input type="text" id="state" name="state" placeholder="NY" class="form-control">
                            </div>
                            <div class="col-sm-6">
                                <label for="zip" class="control-label">Zip</label>
                                <input type="text" id="zip" name="zip" placeholder="10001" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 form-group">
                        <h3>Payment</h3>
                        <label for="cname" class="control-label">Name on Card</label>
                        <input type="text" id="cname" name="cardname" placeholder="John More Doe" class="form-control">
                        <br />
                        <label for="ccnum" class="control-label">Credit card number</label>
                        <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444" class="form-control">
                        <br />
                        <label for="expmonth" class="control-label">Exp Month</label>
                        <input type="text" id="expmonth" name="expmonth" placeholder="September" class="form-control">
                        <br />
                        <div class="row form-group">
                            <div class="col-sm-6">
                                <label for="expyear" class="control-label">Exp Year</label>
                                <input type="text" id="expyear" name="expyear" placeholder="2018" class="form-control">
                            </div>
                            <div class="col-sm-6">
                                <label for="cvv" class="control-label">CVV</label>
                                <input type="text" id="cvv" name="cvv" placeholder="352" class="form-control">
                            </div>
                        </div>
                    </div>

                </div>
                <input type="submit" value="Continue to checkout" class="btn btn-danger m-1">
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
